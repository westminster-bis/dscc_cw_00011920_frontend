@model Frontend.Model.Patient

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Full name</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"> Patient's Age</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientIllness" class="control-label">Patient's Diagnosed Illness</label>
                <input asp-for="PatientIllness" class="form-control" />
                <span asp-validation-for="PatientIllness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignedDoctorId" class="control-label">Assigned Doctor</label>
                @Html.DropDownList("AssignedDoctorId", new SelectList(ViewBag.doctorsList, "Id", "FirstName"), "--none--", new { @class = "form-control", placeholder = "Assigned Doctor" })

              
                <span asp-validation-for="AssignedDoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

